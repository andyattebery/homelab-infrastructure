bind_host: 0.0.0.0
bind_port: 80
users:
  - name: {{ adguardhome_username }}
    password: {{ adguardhome_password | password_hash('bcrypt') }}
tls:
  enabled: true
  server_name: {{ adguardhome_hostname }}
  force_https: false
  port_https: 443
  port_dns_over_tls: 853
  port_dns_over_quic: 784
  port_dnscrypt: 0
  dnscrypt_config_file: ""
  allow_unencrypted_doh: false
  certificate_chain: ""
  private_key: ""
  certificate_path: /certbot/config/live/{{ adguardhome_hostname }}/fullchain.pem
  private_key_path: /certbot/config/live/{{ adguardhome_hostname }}/privkey.pem
  strict_sni_check: false
schema_version: 14