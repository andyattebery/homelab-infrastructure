# {{ ansible_managed }}
# https://networkupstools.org/docs/man/nut.conf.html

{% if nut_enable_server_remote_access %}
MODE=netserver
{% else %}
MODE=standalone
{% endif %}

{% for directive in nut_nut_directives | default({}) %}
{% if nut_nut_directives[directive] != none %}
{{ directive }} = {{ nut_nut_directives[directive] }}
{% endif %}
{% endfor %}