# {{ ansible_managed }}
# https://networkupstools.org/docs/man/upsd.conf.html

{% if nut_enable_server_remote_access %}
LISTEN 127.0.0.1
LISTEN {{ nut_ip_address }}
{% for listen_interface in nut_server_listen_interfaces | default([]) %}
LISTEN {{ listen_interface }}
{% endfor %}
{% endif %}

{% for directive in nut_upsd_directives | default({}) %}
{% if nut_upsd_directives[directive] != none %}
{{ directive }} = {{ nut_upsd_directives[directive] }}
{% endif %}
{% endfor %}