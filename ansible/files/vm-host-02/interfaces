auto lo
iface lo inet loopback

auto enp1s0
iface enp1s0 inet static
    address 192.168.1.242/24
    gateway 192.168.1.1
    ethernet-wol pumbg

iface enp2s0 inet manual
    ethernet-wol pumbg

auto vmbr0
iface vmbr0 inet static
    address 192.168.1.247/24
    gateway 192.168.1.1
    bridge-ports enp2s0
    bridge-stp off
    bridge-fd 0